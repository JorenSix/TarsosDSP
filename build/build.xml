			<fileset dir="../doc" />
		</copy>

		<mkdir dir="TarsosDSP-${version}-Examples" />
		<move todir="TarsosDSP-${version}-Examples">
			<fileset dir=".">
				<include name="*.jar" />
				<exclude name="TarsosDSP-${version}-bin.jar" />
				<exclude name="TarsosDSP-${version}.jar" />
			</fileset>
		</move>
	</target>

