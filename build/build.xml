			<test name='be.hogent.tarsos.dsp.test.WaveformWriterTest' />
			<classpath>
				<pathelement path="${junit_jar}:../bin" />
			</classpath>
			<!-- does not work for an unknown reason 	
			<batchtest>
				<fileset dir="../tests/be/hogent/tarsos/dsp/test">
					<include name="**/*Test*.java" />
				</fileset>
